{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
  },
  "exclude": ["node_modules"]
}
